<!DOCTYPE html>
<html>
<head>
<title>Edit Profile</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
<!-- Custom Theme files -->
<link type="text/css" rel="stylesheet" href="css/style-login.css"/>
<!-- //Custom Theme files -->
<!-- web font -->
<link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">
<!-- //web font -->
</head>
<body>
	<!-- main -->
	<div class="main-w3layouts wrapper">
		<h1>Edit Profile</h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form action="/editprofile" method="post">
					<input class="text" type="text" name="firstname" value={{details.firstname}} placeholder="{firstname}} *" required="">
					<br><br>
					<input class="text" type="text" name="lastname" value={{details.lastname}} placeholder="Last Name *" required="" style="position: relative ; top:-5px"><br><br>
					<input class="text" type="text" name="mobileno" value={{details.mobileno}} placeholder="Mobile No *" required="" style="position: relative ; top:-5px">
					<input class="text email" type="email" name="email" disabled value={{details.email}} placeholder="Email *"  required="">
										
					<input type="submit" value="Edit">
                    
				</form>
                <form action="/afterlogin" method="get">
                    <input type="submit" value="Back" style="position: relative ; top:-25px">
                </form>
			</div>
		</div>

	</div>
	<!-- //main -->
</body>
</html>